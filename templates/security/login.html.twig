{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
    <div class="flex flex-row">
        <img src="{{ asset('build/images/conviction.webp') }}" alt="flower"/>
        <div class=" w-full flex flex-col justify-start items-center pt-20">
            <div class="w-1/2 flex flex-col justify-between items-stretch">
                <h1 class="text-3xl">Connexion</h1>

                {% if error %}
                    <div class="alert alert-danger">
                        {{ error.messageKey|trans(error.messageData, 'security') }}
                    </div>
                {% endif %}


                {{ form_start(loginForm) }}
                <div class="flex flex-col justify-between items-stretch w-full">
                    {{ form_label(loginForm.email) }}
                    {{ form_widget(loginForm.email, {'attr': {'class': 'border border-black rounded-md'}}) }}
                </div>
                <div class="flex flex-col justify-between items-stretch">
                    {{ form_label(loginForm.password) }}
                    {{ form_widget(loginForm.password, {'attr': {'class': 'border border-black rounded-md'}}) }}
                </div>
                <div class="form-group">
                    {{ form_widget(loginForm.submit) }}
                </div>
                {{ form_end(loginForm) }}
            </div>
        </div>
    </div>
{% endblock %}